{
  "name": "@yutahaga/vue-media-breakpoints",
  "version": "0.2.0",
  "description": "A plugin of Vue that store current viewport size name.",
  "license": "MIT",
  "main": "dist/vue-media-breakpoints.cjs.js",
  "module": "dist/vue-media-breakpoints.esm.js",
  "unpkg": "dist/vue-media-breakpoints.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/yutahaga/vue-media-breakpoints",
  "bugs": "https://github.com/yutahagavue-media-breakpoints/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/yutahaga/vue-media-breakpoints.git"
  },
  "keywords": [
    "vue",
    "vue plugin",
    "media queries"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:bundle",
    "build:ts": "tsc -p src",
    "build:bundle": "node scripts/build.js",
    "clean": "rimraf lib dist .tmp",
    "dev": "jest --watch",
    "lint": "tslint -p . && prettier --list-different \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/lodash.debounce": "^4.0.4",
    "@types/node": "^10.12.12",
    "@types/webpack": "^4.4.20",
    "@vue/test-utils": "^1.0.0-beta.26",
    "awesome-typescript-loader": "^5.2.1",
    "cpx": "^1.5.0",
    "es6-promise": "^4.2.5",
    "glob": "^7.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "lodash.debounce": "^4.0.8",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run test",
      "git add"
    ]
  }
}
